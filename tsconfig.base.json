{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@tft/api-interfaces": ["libs/api-interfaces/src/index.ts"],
      "@tft/core": ["libs/core/src/index.ts"],
      "@tft/crispr-forms": ["libs/crispr-forms/public-api.ts"],
      "@tft/crispr-forms/ui": ["libs/crispr-forms/ui/index.ts"],
      "@tft/crispr-forms/ui/info": ["libs/crispr-forms/ui/info/index.ts"],
      "@tft/crispr-forms/ui/heading": ["libs/crispr-forms/ui/heading/index.ts"],
      "@tft/crispr-forms/ui/field-container": ["libs/crispr-forms/ui/field-container/index.ts"],
      "@tft/crispr-forms/ui/selected-file": ["libs/crispr-forms/ui/selected-file/index.ts"],
      "@tft/crispr-forms/ui/file-dropzone": ["libs/crispr-forms/ui/file-dropzone/index.ts"],
      "@tft/crispr-forms/ui/image-upload-field": ["libs/crispr-forms/ui/image-upload-field/index.ts"],
      "@tft/crispr-forms/utils": ["libs/crispr-forms/utils/index.ts"],
      "@tft/form-validation-handler": [
        "libs/form-validation-handler/src/index.ts"
      ],
      "@tft/interact": ["libs/interact/src/index.ts"],
      "@tft/mat-instantsearch": ["libs/mat-instantsearch/src/index.ts"],
      "@tft/ui-imports": ["libs/ui-imports/src/index.ts"]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "preserveWhitespaces": true
  },
  "exclude": ["node_modules", "tmp"]
}
